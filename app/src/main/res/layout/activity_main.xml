<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@Dimen/activity_vertical_margin"
    android:paddingTop="@Dimen/activity_horizontal_margin"
    android:paddingLeft="@Dimen/activity_horizontal_margin"
    android:paddingRight="@Dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:gravity="top"
    android:textAlignment="center"
    android:background="#6495ed"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:layout_weight="0.07"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="@string/kaks"
        android:textColor="#000000"
        android:textColorLink="?android:atter/editTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/editOP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editOP2"
        android:layout_alignStart="@+id/editOP2"
        android:layout_below="@+id/editOP2"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Sisesta esimene number"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="18sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editOP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Sisesta teine number"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
           android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:id="@+id/liida"
            android:layout_weight="0.3"
            android:text="+"
            android:textColor="#000000"/>

        <Button
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:id="@+id/lahuta"
            android:layout_weight="0.3"
            android:text="-"
            android:textColor="#000000"/>

        <Button
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:id="@+id/korruta"
            android:layout_weight="0.3"
            android:text="*"
            android:textColor="#000000"/>


        <Button
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:id="@+id/jaga"
            android:layout_weight="0.3"
            android:text="/"
            android:textColor="#000000"/>

        <Button
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:id="@+id/kustuta"
            android:layout_weight="0.3"
            android:text="C"
            android:textColor="#000000"/>



    </LinearLayout>

    <TextView
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:id="@+id/textView1"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/tulemus"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textColorLink="?android:attr/editTextColor"
        android:textSize="30sp"
        android:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/tulemus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="0.00"
        android:textColor="#000000"
        android:textSize="18sp" />




    </LinearLayout>
